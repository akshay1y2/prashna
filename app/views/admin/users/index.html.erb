<h1><%=t('.index_heading')%></h1>
<div class="table-responsive">

  <table class = 'table table-striped table-bordered  table-hover'>
    <thead class = 'thead-dark'>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Credits</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to user.credits, credit_transactions_user_path(user) %></td>
          <% unless user == current_user %>
            <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
            <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: "User '#{user.name}' will be deleted, are you sure?" } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br/>
<%= paginate @users %>
<br/>
