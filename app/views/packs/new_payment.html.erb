<div class="row">
  <div class="card col-sm-10 col-md-5">
    <%= image_tag @pack.image, class: "card-img-top" %>
    <div class="card-body">
      <h5 class="card-title"><%= @pack.id %>. <%= @pack.name %></h5>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item h5">Credits: <%= @pack.credits %></li>
      <li class="list-group-item h5">Price: <del>$<%= @pack.original_price %></del> $<%= @pack.current_price %></li>
    </ul>
  </div>

  <div class="col-md-1"><hr/></div>
  
  <div class="col-sm-10 col-md-6">
    <%= image_tag "payment_types" %>
    <h1>Pay via Card</h1>
    <hr/>
    <form>
      <div class="form-group">
        <label for="cc-number" class="control-label mb-1">Card number</label>
        <input id="cc-number" name="cc-number" class="form-control" required autocomplete="off">
      </div>
      <div class="row">
        <div class="form-group col-6">
            <label for="cc-exp" class="control-label mb-1">Expiration</label>
            <input id="cc-exp" class="form-control" required placeholder="MM / YY">
          </div>
          <div class="col-3">
            <label for="x_card_code" class="control-label mb-1">CVV</label>
            <input id="x_card_code" class="form-control" placeholder="XYZ" required autocomplete="off">
          </div>
        </div>
        <div class="form-group">
          <label for="x_zip" class="control-label mb-1">Postal code</label>
          <input id="x_zip" name="x_zip" type="text" class="form-control" data-val="true" autocomplete="postal-code">
        </div>
        <div class="form-submit">
            <button id="payment-button" type="submit" class="btn btn-lg btn-success btn-block"> Make Payment </button>
        </div>
    </form>

  </div>
</div>
