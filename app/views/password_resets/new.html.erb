<%= form_tag password_resets_create_path, method: :post do %>
  <div class="form-group">
    <%= label_tag :email, t('.email_label') %>
    <%= text_field_tag :email, params[:email], 'aria-describedby': "emailHelpBlock", placeholder:"Email" %>
    <small id="emailHelpBlock" class="form-text text-muted"><%=t('.email_help_block')%></small>
  </div>
  <div class="actions">
    <%= submit_tag t('.reset_btn'), class: "btn btn-primary btn-sm"  %>
  </div>
<% end %>