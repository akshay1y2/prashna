<%= form_with url: root_path, local: true, method: :get do |form| %>
  <div class="form-row align-items-center">
    <div class="col-auto">
      <div class="input-group mb-2">
        <div class="input-group-text"><%= t(".title") %></div>
        <%= form.text_field :title, class: 'form-control', placeholder: t(".title") %>
      </div>
    </div>
    <div class="col-auto">
      <div class="input-group mb-2">
        <div class="input-group-text"><%= t(".topics") %></div>
        <%= form.text_field :topics, class: 'form-control', placeholder: t(".topics") %>
      </div>
    </div>
    <div class="col-auto">
      <%= form.submit t('.filter'), class: "btn btn-primary mb-2"  %>
    </div>
  </div>
<% end %>