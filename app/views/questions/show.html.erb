<div class="container">
  <div class="row">
    <%= render @question, question: @question %>
  </div>
  <div class="row">
  <%= form_with(model: @comment, url: comment_question_path, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :content, 'Comment', class: 'col-form-label' %>
      <%= form.text_area :content, class: 'form-control', rows: '2' %>
    </div>
    <div class="actions">
      <%= form.submit 'Post', class: "btn btn-primary btn-sm"  %>
    </div>
  <% end %>
  </div>
</div>

<%= link_to 'Back', questions_path, class: 'btn btn-primary' %>
<% if current_user.id == @question.user.id %>
  <%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-secondary' %>
  <%= link_to 'Destroy', @question, method: :delete, data: { confirm: t('.confirm_delete') }, class: 'btn btn-danger' %>
<% end %>