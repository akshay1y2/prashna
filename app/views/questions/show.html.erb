<%= render @question, question: @question %>

<%= link_to 'Back', questions_path, class: 'btn btn-primary' %>
<% if @question.posted_by?(current_user) %>
  <%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-secondary' %>
  <%= link_to 'Destroy', @question, method: :delete, data: { confirm: t('.confirm_delete') }, class: 'btn btn-danger' %>
<% end %>
<% if @question.published? %>
  <hr/>
  <div class="card border-secondary mb-3" id="answers-container">
    <%= render template: 'answers/index', locals: { question: @question } %>
  </div>
<% end %>
