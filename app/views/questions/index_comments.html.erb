<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user.name %></td>
        <td><%= comment.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Question', @question %>
