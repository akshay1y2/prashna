<%= content_tag :div, class: :toast, data: { path: notifications_poll_path, delay: "5000" }, style: "position: absolute; right: 0;" do %>

  <div class="toast-header">
    <strong class="mr-auto"></strong>
    <small></small>
    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body"></div>

<% end %>

<%= javascript_pack_tag 'poll_notification', 'data-turbolinks-track': 'reload' %>
