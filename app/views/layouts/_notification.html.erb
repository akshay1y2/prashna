<div aria-live="polite" role="status" aria-atomic="true" style="position: relative;">
<div class="toast sticky-top" style="position: absolute; top: 0; right: 0;" data-autohide="false" data-path="<%= notifications_poll_path %>" data-notifications_path="<%= notifications_users_path %>">

  <div class="toast-header">
    <strong class="mr-auto"></strong>
    <small></small>
    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body"></div>

</div>
</div>
