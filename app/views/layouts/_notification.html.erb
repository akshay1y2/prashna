<% if current_user.present? %>
  <div aria-live="polite" role="status" aria-atomic="true" style="position: relative;">
  <div class="toast sticky-top" style="position: absolute; top: 0; right: 0;" data-autohide="false" data-path="<%= notifications_poll_path %>" data-notifications_path="<%= notifications_path %>">

    <div class="toast-header">
      <strong class="mr-auto"></strong>
      <small></small>
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body"></div>

  </div>
  </div>
<% end %>

<div id='spinnerNotifier'>
  <h3 class="text-danger">
    <span class="spinner-grow mr-2" role="status"></span>
    <em><%= t('.processing') %></em>
  </h3>
</div>
