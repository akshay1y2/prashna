<%= form_with(model: user, local: true) do |form| %>
  <%= errors_explanation_div(user) %>

  <% if user.active? %>
  <% content_for :select_topics do %>
    <%= javascript_pack_tag 'select_topics', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <% end %>
  <div class="form-group">
    <%= form.label :avatar %>
    <%= form.file_field :avatar %>
  </div>
  <div class="form-group">
    <%= form.label :topics %>
    <%= form.text_field :topics %>
    <small id="topicsHelpBlock" class="form-text text-muted"><%=t('.topics_help_block')%></small>
  </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation, 'Confirm' %>
    <%= form.password_field :password_confirmation, id: :user_password_confirmation %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
