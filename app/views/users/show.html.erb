<div class="media">
  <%= image_tag @user.avatar, alt: "avatar", class:"align-self-start mr-3 rounded border" if @user.avatar.attached? %>
  <div class="media-body">
    <p>
      <strong>Name:</strong>
      <%= @user.name %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>

    <p>
      <strong>Credits:</strong>
      <%= @user.credits %>
    </p>

    <p>
      <strong>Topics:</strong>
      <%= @user.topic_names.join(', ') %>
    </p>
  </div>
</div>

<div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
  <%= link_to t('.edit'), edit_user_path(@user), class: 'btn btn-primary' %>
  <%= link_to 'Drafts', drafts_questions_path, class: 'btn btn-link' %>
</div>
