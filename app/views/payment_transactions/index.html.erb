<h1><%=t('.index_heading')%></h1>
<% if @payment_transactions.empty? %>
  <h2><%=t('.no_transactions')%></h2>
<% else %>
<div class="table-responsive">

  <table class = 'table table-striped table-bordered  table-hover'>
    <thead class = 'thead-dark'>
      <tr>
        <th>Id</th>
        <th>Credits</th>
        <th>For</th>
        <th>Price</th>
      </tr>
    </thead>

    <tbody>
      <% @payment_transactions.each do |pt| %>
        <tr>
          <td><%= pt.id %></td>
          <td><%= pt.credits %></td>
          <td><%= pt.payable_type %> - <%= pt.payable_id %></td>
          <td>$ <%= pt.amount %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br/>
<% end %>
<%= paginate @payment_transactions %>
<%= link_to "Back", :back, class: 'btn btn-primary' %>
<br/>
