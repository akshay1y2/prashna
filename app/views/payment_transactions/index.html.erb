<h1><%=t('.index_heading')%></h1>
<% if @payment_transactions.empty? %>
  <h2><%=t('.no_transactions')%></h2>
<% else %>
<div class="table-responsive">

  <table class = 'table table-striped table-bordered  table-hover'>
    <thead class = 'thead-dark'>
      <tr>
        <th>Id</th>
        <th>Status</th>
        <th>Credits</th>
        <th>Pack</th>
        <th>Price</th>
        <th>Paid</th>
        <th>Refunded</th>
      </tr>
    </thead>

    <tbody>
      <% @payment_transactions.each do |pt| %>
        <tr>
          <td><%= pt.id %></td>
          <td><%= pt.status %></td>
          <td><%= pt.credits %></td>
          <td><%= pt.purchase_pack.name %></td>
          <td>&#8377 <%= pt.amount %></td>
          <td><%= pt.paid_at? ? time_ago_in_words(pt.paid_at) : '-' %></td>
          <td><%= pt.refunded_at? ? time_ago_in_words(pt.refunded_at) : '-' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br/>
<% end %>
<%= paginate @payment_transactions %>
<%= link_to "Back", :back, class: 'btn btn-primary' %>
<br/>
