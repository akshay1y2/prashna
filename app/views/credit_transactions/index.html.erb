<h1><%=t('.index_heading')%></h1>
<% if @credit_transactions.empty? %>
  <h2><%=t('.no_transactions')%></h2>
<% else %>
<div class="table-responsive">

  <table class = 'table table-striped table-bordered  table-hover'>
    <thead class = 'thead-dark'>
      <tr>
        <th>Id</th>
        <th>Credits</th>
        <th>For</th>
        <th>Reason</th>
      </tr>
    </thead>

    <tbody>
      <% @credit_transactions.each do |ct| %>
        <tr>
          <td><%= ct.id %></td>
          <td><%= ct.credits %></td>
          <td><%= ct.creditable_type %> - <%= ct.creditable_id %></td>
          <td><%= ct.reason %></td>
        </tr>
      <% end %>
      <tr class="bg-info">
        <td><strong>#Total</strong></td>
        <td colspan='3'><strong><%= @credits %></strong></td>
      </tr>
    </tbody>
  </table>
</div>
<br/>
<% end %>
<%= paginate @credit_transactions %>
<%= link_to "Back", :back, class: 'btn btn-primary' %>
<br/>
